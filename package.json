{
  "name": "amigo-marketing",
  "version": "1.0.0",
  "description": "Plateforme de marketing digital pour l'envoi de SMS, WhatsApp et emails en masse avec suivi des performances",
  "main": "dist-electron/main.js",
  "type": "commonjs",
  "homepage": "https://amigo-marketing.com",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "clean-install": "node scripts/install.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:pack": "npm run build && npm run electron:compile && electron-builder",
    "electron:dist": "npm run build && npm run electron:compile && electron-builder --publish=never",
    "build:win": "npm run build && npm run electron:compile && electron-builder --win --x64",
    "build:win-portable": "npm run build && npm run electron:compile && electron-builder --win portable",
    "package:win": "npm run build && npm run electron:compile && electron-builder --win",
    "dist:win": "npm run build && npm run electron:compile && electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.amigo.marketing",
    "productName": "Amigo Marketing",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "Amigo-Marketing-Setup-${version}.${ext}",
      "publisherName": "Amigo Marketing Team"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Amigo Marketing"
    },
    "portable": {
      "artifactName": "Amigo-Marketing-Portable-${version}.${ext}"
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-aspect-ratio": "^1.0.3",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-compose-refs": "^1.0.1",
    "@radix-ui/react-context-menu": "^2.1.5",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-hover-card": "^1.0.7",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@supabase/supabase-js": "^2.39.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "cmdk": "^0.2.0",
    "date-fns": "^3.3.1",
    "embla-carousel-react": "^8.0.0",
    "input-otp": "^1.2.4",
    "lucide-react": "^0.344.0",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-day-picker": "^8.10.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.55.0",
    "react-resizable-panels": "^1.0.9",
    "recharts": "^2.10.4",
    "sonner": "^2.0.3",
    "tailwind-merge": "^2.2.1",
    "vaul": "^0.9.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@tailwindcss/vite": "^4.0.0-alpha.20",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "tailwindcss": "^4.0.0-alpha.20",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "keywords": [
    "marketing",
    "digital",
    "sms",
    "whatsapp",
    "email",
    "campagnes",
    "analytics",
    "react",
    "typescript",
    "supabase",
    "tailwindcss",
    "electron",
    "desktop",
    "windows"
  ],
  "author": "Amigo Marketing Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amigo-marketing/platform.git"
  },
  "bugs": {
    "url": "https://github.com/amigo-marketing/platform/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
